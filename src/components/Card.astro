---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---
<section class="transition transition-all flex flex-col bg-white border border-2 border-gray-200 rounded-lg w-96 h-56 px-3 py-1 drop-shadow-lg mx-4 my-8 hover:-translate-y-8">
  <p class="text-2xl font-semibold py-4 px-2 mx-4 text-black">{title}</p>
  <p class="text-xl py-4 px-4 text-black">{body}</p>
</secStartertion>
