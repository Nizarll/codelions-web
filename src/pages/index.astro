---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro';
import PricedTag from '../components/PricedTag.astro'
import Process from '../components/Process.astro';
---

<Layout title="codelions">
  <Header/>
  <Main />
  <div class="my-8 w-full h-1/2 bg-gray-200 items-center justify-center flex flex-col">
    <div class="div class flex flex-col justify-center items-center">
      <p class="mt-20 text-3xl font-extrabold drop-shadow-lg">Our services.</p>
      <div class="services flex flex-row flex-wrap items-center justify-center py-4 pb-24 pt-24">
        <Card title="Customer service" body="Experienced in delivering excellent customer service through effective communication, problem-solving, and ensuring customer satisfaction." href=""/>
        <Card title="Web development and creations" body="Skilled in web development and design, creating responsive and user-friendly websites." href=""/>
        <Card title="Search engine optimization" body="Experienced in SEO, optimizing websites to enhance search engine rankings and increase organic traffic." href=""/>
        <Card title="Optimized backend systems" body="Experienced in delivering excellent customer service through effective communication, problem-solving, and ensuring customer satisfaction." href=""/>
      </div>
    </div>
    <section class="flex flex-col justify-center items-center">
      <p class="mt-12 text-3xl font-extrabold drop-shadow-lg">Designed for businesses like yours</p>
      <p class="mt-3 mb-8 text-gray-500 text-xl drop-shadow-lg">the Codelions teams focuses on providing the best services for the most optimal prices </p>
      <div class = "mb-12 w-full flex flex-wrap flex-row justify-center items-center">
        <PricedTag price="549" title= "Starter" body ="hello" href=""/>
        <PricedTag price="1239" title= "Medium" body ="hello" href=""/>
        <PricedTag price="3200+" title= "Pro" body ="hello" href=""/>
      </div>
    </section>
  </div>
  <div class="py-10 my-10 bg-white w-full flex flex-col items-center justify-center">
    <p class="text-3xl font-extrabold drop-shadow-lg">How to start ?</p>
    <div class="py-20">
      <Process/>
    </div>
  </div>
</Layout>
