      <Process/>
    </div>
  </div>
  <div class="py-10 my-10 bg-white w-full flex flex-col items-center justify-center">
    <p class="text-3xl font-extrabold drop-shadow-lg">Examples</p>
    <div class="my-20 mx-20 flex flew-row flex-wrap justify-center">
      <Image src={example_1} alt="portfolio example 1" class="w-1/4 h-auto mx-8 drop-shadow-lg"/>
      <Image src={page_1} alt="portfolio example 1" class="w-1/4 h-auto mx-8 drop-shadow-lg"/>
      <Image src={page_2} alt="portfolio example 1" class="w-1/4 h-auto mx-8 drop-shadow-lg"/>
      </ul>
    </div>
  </div>
  <div class="py-10 mt-24 bg-white w-full flex flex-col items-center justify-center bg-gray-300">
